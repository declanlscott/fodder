{
  "extends": "@repo/typescript-config/base.json",
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "lib": ["ESNext"],
    "types": [
      "@cloudflare/workers-types",
      "vitest-environment-miniflare/globals"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": "./src",
    "paths": {
      "~/lib/*": ["lib/*"],
      "~/routes/*": ["routes/*"],
      "~/schemas/*": ["schemas/*"],
      "~/types/*": ["types/*"]
    }
  }
}
