{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "frontend#dev": {
      "dependsOn": ["@repo/ui#build", "@repo/env#build"]
    },
    "lint": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "frontend#deploy": {
      "dependsOn": ["backend#deploy", "@repo/ui#build", "@repo/env#build"]
    }
  }
}
