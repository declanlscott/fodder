{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["PROD"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lambda/**"]
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": false
    }
  }
}
